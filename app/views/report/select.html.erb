<% provide(:title, "Select Report") %>
<h1>Upload a Report</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag({action: :upload}, multipart: true ) do %>
	<p>
		<%= label_tag 'upload_file', 'Select File'%>
		<%= file_field 'upload', 'datafile' %>
	</p>
	<%= submit_tag "Upload", :disable_with => "Please wait...", :class => "btn btn-large btn-primary" %>
	<% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>